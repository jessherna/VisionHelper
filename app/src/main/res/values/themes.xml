<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.VisionHelper" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/samsung_blue</item>
        <item name="colorPrimaryDark">@color/samsung_blue_dark</item>
        <item name="colorAccent">@color/samsung_accent</item>
        <item name="android:colorPrimary" tools:targetApi="21">@color/samsung_blue</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/samsung_blue_dark</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/samsung_accent</item>
        
        <!-- Status bar color -->
        <item name="android:statusBarColor" tools:targetApi="21">@color/samsung_blue_dark</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor" tools:targetApi="21">@color/samsung_blue_dark</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/samsung_gray_dark</item>
        <item name="android:textColorSecondary">@color/samsung_gray</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
    </style>
</resources>